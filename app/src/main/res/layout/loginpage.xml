<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent">
    <Button
        android:drawableLeft="@drawable/icon_fb_drawble"
        android:drawableRight="@drawable/icon_google_drawble_transparent"
        android:id="@+id/btnFb"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/circle_drawblefb"
        android:text="KẾT NỐI VỚI FACEBOOK"
        android:textColor="#FEFFFF" />
    <Button
        android:id="@+id/btnGoogle"
        android:drawableLeft="@drawable/icon_google_drawable"
        android:drawableRight="@drawable/icon_google_drawble_transparent"
        android:text="KẾT NỐI VỚI GOOGLE"
        android:gravity="center"
        android:layout_marginEnd="24dp"
        android:textColor="#FEFFFF"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/circle_drwable"
        android:layout_width="match_parent"
        android:layout_height="48dp" />
    <TextView
        android:layout_marginBottom="24dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#3F3F3F"
        android:text="Hoặc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/txtEmail"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_width="match_parent"
        android:textColor="#A7ADAD"
        android:textColorHint="#A7ADAD"
        android:hint="Địa chỉ email hoặc số điện thoại"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/txtPassword"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:textColor="#A7ADAD"
        android:textColorHint="#A7ADAD"
        android:hint="Mật khẩu (tối thiểu 6 ký tự)"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnLogin"
        android:layout_marginTop="32dp"
        android:text="ĐĂNG NHẬP"
        android:layout_marginEnd="24dp"
        android:textColor="#FEFFFF"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/circle_drablelogin"
        android:layout_width="match_parent"
        android:layout_height="48dp" />
    <TextView
        android:id="@+id/txtForgotPass"
       android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:gravity="bottom"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:text="Bạn quên mật khẩu?"
        android:textAllCaps="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>