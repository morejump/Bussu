<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:background="#F0F5F8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.morejump.bussu.MachingSentenceActivity">
    <ImageView
        android:id="@+id/imgPlayBtn"
        android:padding="8dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_play_btn"
        android:background="@drawable/circle_drwable"
        android:layout_centerHorizontal="true"
        android:layout_width="54dp"
        android:layout_height="54dp" />
    <TextView
        android:id="@+id/txtGuide"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@id/imgPlayBtn"
        android:layout_centerHorizontal="true"
        android:textColor="#2EA6F6"
        android:textSize="20dp"
        android:textAlignment="center"
        android:text="Chạm vào (các) từ đúng để hoàn thành câu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtSentence"
        android:layout_marginTop="24dp"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:text="How's it going______?"
        android:layout_below="@id/txtGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtTest"
        android:textColor="#000000"
        android:textSize="18dp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:clickable="true"
        android:background="@drawable/rectange_drawable_text"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txtSentence"
        android:text="thao dep trai"
        android:elevation="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



   

</RelativeLayout>
